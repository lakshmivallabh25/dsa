#include <stdio.h>

int main() {
	int m[3][3] = {
	    {1,4,7},
	    {2,5,8},
	    {3,6,9}
	};
	
	int rows = 3, cols = 3;
	int current, target = 6;
	
	int flag = 0, cnt=0;
	
	int i=0, j=rows-1;
    while(i<rows && j>-1){
        current = m[i][j];
        
        if (target == current){
            printf("if case\n");  
            flag = 1;
            break;
        }
        
        else if (target < current){
            printf("else if case\n");    
            // Move to left and eliminate that column
            j -= 1;
        }
        
        else{
            printf("else case\n");    
            i += 1;
        }
        cnt++;
    }
    
    if (flag == 1){
        printf("Found at position (%d,%d)\n",i,j);
        printf("Steps Taken: %d",cnt);
    }
    else
        printf("Not found");
	
	
}

